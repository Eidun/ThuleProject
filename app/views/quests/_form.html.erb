<%= form_with(model: quest, local: true) do |form| %>
    <% if quest.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(quest.errors.count, "error") %> prohibited this quest from being saved:</h2>

          <ul>
            <% quest.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, id: :quest_name %>
    </div>

    <div class="field">
      <%= form.label :rank %>
      <%= form.text_field :rank, id: :quest_rank %>
    </div>

    <div class="field">
      <%= form.label :finished %>
      <%= form.check_box :finished, id: :quest_finished %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
<% end %>
