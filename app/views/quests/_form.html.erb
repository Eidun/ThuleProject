<%= form_with(model: quest, local: true) do |form| %>
  <% if quest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(quest.errors.count, "error") %> prohibited this quest from being saved:</h2>

      <ul>
      <% quest.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :quest_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :quest_description %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.text_field :category, id: :quest_category %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location, id: :quest_location %>
  </div>

  <div class="field">
    <%= form.label :level %>
    <%= form.number_field :level, id: :quest_level %>
  </div>

  <div class="field">
    <%= form.label :finished %>
    <%= form.check_box :finished, id: :quest_finished %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
